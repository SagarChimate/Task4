<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Applications</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">

    <h1>User Applications</h1>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SR No</th>
                <th>User ID</th>
                <th>User Name</th>
                <th>User Email</th>
                <th>User Phone</th>
                <th>User Position</th>
                <th>Resume</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.map((val, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%- val.user_id %></td>
                    <td><%- val.name %></td>
                    <td><%- val.email %></td>
                    <td><%- val.phone %></td>
                    <td><%- val.position %></td>
                    <td><a href="/uploads/<%= val.file %>" target="_blank">View</a></td>
                    <td>
                        <a href="/edit/<%- val.user_id %>" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/delete/<%- val.user_id %>" onclick="return confirm('Are You Sure?')" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</body>
</html>
